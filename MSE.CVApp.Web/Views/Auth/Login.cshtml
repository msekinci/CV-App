@model AppUserLoginModel
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Mehmet Serkan Ekinci - CV">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.80.0">
    <title>CV App Login</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">



    <!-- Bootstrap core CSS -->
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/login.css" rel="stylesheet">
</head>
<body class="text-center">

    <main class="form-signin">
        <form asp-action="Login" method="post">
            <img class="mb-4" src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <label asp-for="UserName" class="sr-only">
                Username
                <span class="text-danger" asp-validation-for="UserName"></span>
            </label>
            <input asp-for="UserName" class="form-control" placeholder="Email address" required autofocus>

            <label asp-for="Password" class="sr-only">
                Password
                <span class="text-danger" asp-validation-for="Password"></span>
            </label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" asp-for="RememberMe"> Remember me
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

            <div class="text-danger mt-1" asp-validation-summary="ModelOnly"></div>

            <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
        </form>
    </main>



</body>
</html>
